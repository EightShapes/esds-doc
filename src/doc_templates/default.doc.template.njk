{% block project_macro_imports %}
    {% import "doc_library/components/mds_doc_library_macros.njk" as doc_library with context %}
{% endblock %}

{% extends 'doc_templates/default.template.njk' %}

{% block head_assets %}
    {# Include doc_library.css and doc.css here - will be loaded after library styles #}
    <link rel="stylesheet" href="/assets/doc-dependencies/prism.css">
    <link rel="stylesheet" href="/assets/styles/mds_doc_library.css">
    <link rel="stylesheet" href="/assets/styles/mds_doc.css">
{% endblock %}

{% block body %}
    <header>
        <h2><a href="/">{{ project.name | upper }}</a></h2>
    </header>

    {% block doc_body %}

    {% endblock %}
    
    <footer>
        {{ content.copyright | safe }}
    </footer>
{% endblock %}

{% block closing_body_assets %}
    {# include doc_library.js here - will be loaded after library scripts #}
    <script src="/assets/doc-dependencies/jquery.min.js"></script>
    <script src="/assets/doc-dependencies/clipboard.min.js"></script>
    <script src="/assets/doc-dependencies/prism.js"></script>
    <script src="/assets/scripts/mds_doc_library.js"></script>
{% endblock %}
