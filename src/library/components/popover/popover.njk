{% macro popover(
		class=false,
		title=false,
		buttons=false,
		close=false,
		trigger_text="Trigger a Popover"
	) %}
	<div class="mds-popover__wrapper{{ ' mds-popover--dialog' if buttons }}{{ ' mds-popover--overlay-closable' if not buttons }}">
        {{ button(text=trigger_text, class="mds-popover__target") }}
    	<div class="mds-popover__overlay"></div>
		<div class="mds-popover{{ ' ' + class if class }}" role="tooltip">
			{% if title %}
			    {% if close %}
			    	<h3 class="mds-popover__title mds-popover__title-with-icon">
			    		{{title}}
			    		<a class="mds-popover__close-button" href="#">
			    			{{ icon(name="remove", class="mds-icon--m mds-popover__icon") }}
			    		</a>
			    	</h3>
			    {% elif buttons %}
			    	<h3 class="mds-popover__title mds-popover__title-with-buttons">
			    		<span class="mds-popover__title-text">{{title}}</span>
			    		<div class="mds-popover__title-buttons">
				    		{{ button(text="Cancel", class="mds-button--small mds-popover__button") }}
				    		{{ button(text="Done", class="mds-button--small mds-button--primary mds-popover__button") }}
				    	</div>
			    	</h3>
			    {% else %}
			    	<h3 class="mds-popover__title"> {{title}} </h3>
			    {% endif %}
			{% endif %}
		    <div class="mds-popover__content">
				{% if caller %}
			        {{ caller() }}
			    {% else %}
			        <p class="mds-popover__paragraph">
			            This is what you're saving each year for retirement across all your accounts. It doesn't include employer contributions. We recommend savings rates for any Additional Savings Needed, not for Your Other Accounts.
			        </p>
				{% endif %}
			</div>
		</div>
	</div>
{% endmacro %}