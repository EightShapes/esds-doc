{% macro pagination(
    class=false,
    include_labels=false,
    include_arrows=true,
    active_page=1,
    pages=8
) %}

<ul class="mds-pagination{{ ' ' + class if class }}">
    {% if ((pages > 1) and (include_arrows)) %}
    <li class="mds-pagination__item mds-pagination__item--disabled">
        {{ icon(name='arrow-first-sm', class='mds-pagination__icon', path=icon_path)}}{{ "First" if include_labels }}
    </li>
    <li class="mds-pagination__item">
        <a href="#" class="mds-pagination__link">{{ icon(name='arrow-prev-sm', class='mds-pagination__icon', path=icon_path)}}{{ "Previous" if include_labels }}</a>
    </li>
    {% endif %}

    {% for i in range(1,pages+1) %}
        {% if (i == active_page) %}
            <li class="mds-pagination__item mds-pagination__item--active">{{i}}</li>
        {% else %}
            <li class="mds-pagination__item">
                <a href="#" class="mds-pagination__link">{{i}}</a>
            </li>
        {% endif %}
    {% endfor %}

    {% if ((pages > 1) and (include_arrows)) %}
    <li class="mds-pagination__item">
        <a href="#" class="mds-pagination__link">{{ "Next" if include_labels }}{{ icon(name='arrow-next-sm', class='mds-pagination__icon', path=icon_path)}}</a>
    </li>
    <li class="mds-pagination__item">
        <a href="#" class="mds-pagination__link">{{ "Last" if include_labels }}{{ icon(name='arrow-last-sm', class='mds-pagination__icon', path=icon_path)}}</a>
    </li>
    {% endif %}
</ul>

{% endmacro %}
