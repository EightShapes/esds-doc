{% macro notification(
            class=false,
            container_id=theme + "-demo-notification-container",
            message="message",
            with_close_button=false,
            close_button_element="button",
            wrap_with_container_element=false,
            container_position_class=theme + "-notification-container--bottom-right"
            ) %}
            {% if wrap_with_container_element %}<div id="{{container_id}}" class="{{ theme }}-notification-container {{container_position_class}}">{% endif %}
                {% if with_close_button %}
                <div class="{{ theme }}-notification {{ theme }}-notification--with-close-button {{class if class}}">
                    <span class="{{ theme }}-notification__message">{{message}}</span>
                    <{{close_button_element}} {% if close_button_element=="button" %}type="button"{% else %}role="button"{% endif %} class="{{ theme }}-notification__close-button">{{ icon(name="remove", class=theme + "-notification__close-button-icon") }}</{{close_button_element}}>
                </div>
                {% else %}
                <div class="{{ theme }}-notification {{class if class}}">
                    <span class="{{ theme }}-notification__message">{{message}}</span>
                </div>
                {% endif %}
            {% if wrap_with_container_element %}</div>{% endif %}
{% endmacro %}
