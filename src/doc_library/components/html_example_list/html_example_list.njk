{% macro html_example_list(examples=[], class = false) %}
    <div class="{{ project.name }}-html-example-list{{ ' ' + class if class }}">
        {% for example in examples %}
            <div class="{{ project.name }}-html-example-list__item">
                {% if example.label %}
                    <label class="{{ project.name }}-html-example-list__label">{{ example.label }}</label>
                    {# {{ library.pill(label=example.label, class="{{ project.name }}-html-examples__pill-label") }} #}
                {% endif %}
                <div class="{{ project.name }}-html-example-list__example">
                    {{ example.source | safe }}
                </div>
            </div>
        {% endfor %}
    </div>
{% endmacro %}
