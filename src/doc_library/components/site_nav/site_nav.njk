{% macro site_nav() %}
    {% set site_nav_data = [
        {
            active: true,
            label: "Home",
            href: "/"
        },
        {
            label: "Getting Started",
            href: "#"
        },
        {
            label: "Visual Language",
            children: [
                {
                    label: "Color",
                    href: "/visual-style/color.html"
                },
                {
                    label: "Icons",
                    href: "/visual-style/icons.html"
                },
                {
                    label: "Space",
                    href: "/visual-style/space.html"
                },
                {
                    label: "Type",
                    href: "/visual-style/type.html"
                }
            ]
        },
        {
            label: "Components",
            children: [
                {
                    label: "Buttons",
                    href: "/components/buttons.html"
                },
                {
                    label: "Forms",
                    href: "/components/forms.html"
                },
                {
                    label: "Notifications",
                    href: "/components/notifications.html"
                }
            ]
        }
    ] %}
    <nav class="mds-doc__navigation">
        <label for="mds-doc__off-canvas-toggle" class="mds-doc__off-canvas-close">
