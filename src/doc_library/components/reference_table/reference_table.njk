{% macro reference_table(
    data=[{
            class: "." + theme + "-component-name--modifier",
            applies_to: "." + theme + "-component-name",
            outcome: "Modifies `" + theme + "-component-name` to change its background color."
        },
        {
            class: "." + theme + "-component-name--different-modifier",
            applies_to: "." + theme + "-component-name",
            outcome: "Modifies `" + theme + "-component-name` to change its background color to a different color."
        }],
    headers=["class", "applies_to", "outcome"]) %}

    <div class="{{ theme }}-doc-reference-table">
        <table class="{{ theme }}-data-table">
            <thead class="{{ theme }}-data-table__header">
                <tr class="{{ theme }}-data-table__row">
                    {% for header in headers %}
                    <th class="{{ theme }}-data-table__header-cell">{{ header | replace("_", " ") | capitalize }}</th>
                    {% endfor %}
                </tr>
            </thead>
            <tbody class="{{ theme }}-data-table__body">
                {% for data_row in data %}
                    <tr class="{{ theme }}-data-table__row">
                        {% for data_key in headers %}
                            {% if data_key == 'class' %}
                                {# Convenience method to wrap class names in code tags #}
                                {% set cell_content = "`" + data_row[data_key] + "`" %}
                            {% else %}
                                {% set cell_content = data_row[data_key] %}
                            {% endif %}
                            <td class="{{ theme }}-data-table__cell">
                                {{ cell_content | markdown(false) }}
                            </td>
                        {% endfor %}
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    {% endmacro %}
