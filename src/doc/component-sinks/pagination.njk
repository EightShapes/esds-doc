{% extends "doc_templates/default.sink.template.njk" %}

{% set title = 'Pagination Sink' %}

{% macro component_sink() %}

    <h2 class="mds-doc-sink__header">With Arrows, First Page</h2>
    {{ library.pagination() }}

    <h2 class="mds-doc-sink__header">With Arrows and Labels, Last Page</h2>
    {{ library.pagination(pages=4, active_page=4, include_labels=true) }}

    <h2 class="mds-doc-sink__header">No Arrows, Middle Page</h2>
    {{ library.pagination(pages=6, active_page=3, include_arrows=false) }}

{% endmacro %}

