{% extends 'templates/sink.njk' %}

{% block sink_body %}
    <h2 class="esl-sink-page-header">Color</h2>
    <div style="color: black; background: white; font-weight: normal; font-style: normal; font-family: {{ esl_tokens.font.family['sans-serif'] }}; font-size: {{ esl_tokens.font.size.m }}">
        {{ color_swatches(esl_tokens.color) }}
    </div>
{% endblock %}

{% macro color_swatches(tokens, key_prefix=false) %}
    {% for name, value in tokens %}
        {% if key_prefix %}
            {% set name = key_prefix + '-' + name %}
        {% endif %}
        {% if value | string !== '[object Object]' %}
            <div style="display: block;">
                <div style="background-color: {{ value }}; height: 20px; width: 20px; display: inline-block; border: solid 1px lightgray;"></div>
                {{ name }} {{ value }}
            </div>
        {% else %}
            {{ color_swatches(value, name) }}
        {% endif %}
    {% endfor %}
{% endmacro %}
