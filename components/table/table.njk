{% macro table(class, headers, rows) %}
    {% from 'components/table/table_defaults.njk' import default_rows, default_headers %}
    {% set rows = rows | default(default_rows) %}
    {% set headers = headers | default(default_headers) %}
    <table class="es-doc-table{{ ' ' + class if class }}">
        <thead class="es-doc-table__head">
            <tr class="es-doc-table__row es-doc-table__row--head">
                {% for header in headers %}
                    <th class="es-doc-table__cell es-doc-table__cell--head">{{ header | safe }}</th>
                {% endfor %}
            </tr>
        </thead>
        <tbody class="es-doc-table__body">
            {% for row in rows %}
                <tr class="es-doc-table__row">
                    {% for cell in row %}
                        <td class="es-doc-table__cell">
                            {{ cell | safe | markdown(false) }}
                        </td>
                    {% endfor %}
                </tr>
            {% endfor %} 
        </tbody>
    </table>
{% endmacro %}
