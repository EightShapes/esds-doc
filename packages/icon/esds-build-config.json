{
  "concatenateScripts": false,
  "concatenateMacros": false,
  "copyScripts": true,
  "copyTasks": [
    {
      "name": "Shady DOM Polyfill",
      "sources": ["./node_modules/esds-base-wc/dist/shadydom.min.*"],
      "destination": "_site/latest/scripts"
    },
    {
      "name": "ESDS Base Component",
      "sources": ["./node_modules/esds-base-wc/dist/esds-base-wc.*"],
      "destination": "_site/latest/scripts",
      "watch": true
    },
    {
      "name": "component-scripts",
      "sources": ["./scripts/**/*"],
      "destination": "_site/latest/scripts",
      "watch": true
    },
    {
      "name": "Esds Icons",
      "sources": ["./node_modules/esds-icons/dist/esds-icons.svg"],
      "destination": "_site/latest/icons",
      "watch": true
    }
  ]
}
