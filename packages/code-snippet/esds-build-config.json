{
  "concatenateScripts": false,
  "concatenateMacros": false,
  "copyScripts": true,
  "copyTasks": [
    {
      "name": "ESDS Base Component",
      "sources": ["./node_modules/esds-base-wc/dist/esds-base-wc.*"],
      "destination": "_site/latest/scripts",
      "watch": true
    },
    {
      "name": "ESDS Button",
      "sources": ["./node_modules/esds-button/dist/esds-button*.js"],
      "destination": "_site/latest/scripts",
      "watch": true
    },
    {
      "name": "ESDS Button Styles",
      "sources": ["./node_modules/esds-button/dist/esds-button*.css"],
      "destination": "_site/latest/styles",
      "watch": true
    },
    {
      "name": "ESDS Tabs",
      "sources": ["./node_modules/esds-tabs/dist/esds-tabs*.js"],
      "destination": "_site/latest/scripts",
      "watch": true
    },
    {
      "name": "ESDS Tabs Styles",
      "sources": ["./node_modules/esds-tabs/dist/esds-tabs*.css"],
      "destination": "_site/latest/styles",
      "watch": true
    },
    {
      "name": "component-scripts",
      "sources": ["./scripts/**/*"],
      "destination": "_site/latest/scripts",
      "watch": true
    },
    {
      "name": "esds icon",
      "sources": ["./node_modules/esds-icon/scripts/**/*"],
      "destination": "_site/latest/scripts",
      "watch": true
    },
    {
      "name": "esds icon styles",
      "sources": ["./node_modules/esds-icon/dist/esds-icon.css"],
      "destination": "_site/latest/styles",
      "watch": true
    },
    {
      "name": "Esds Icon Sprite",
      "sources": ["./node_modules/esds-icons/dist/esds-icons.svg"],
      "destination": "_site/latest/icons",
      "watch": true
    }
  ]
}
