{% extends "templates/sink.njk" %}
{% block body %}
    {% filter markdown %}
        # Card Grids Sink
    {% endfilter %} 
    {% macro card_grid_sink_page_card_set(card_background="light") %}
      {{ esds.card(
          container=card_background,
          thumbnail_image="/images/card/team-models-for-scaling-design-systems.jpg",
          date="2017",
          title="Discovery Education",
          description="Comet, for educational digital apps and sites.",
          cta="View the Library",
          href="https://medium.com/eightshapes-llc/team-models-for-scaling-a-design-system-2cf9d03be6a0"
      ) }}

      {{ esds.card(
          class="esds-card--hover",
          container=card_background,
          thumbnail_image="/images/card/team-models-for-scaling-design-systems.jpg",
          date="2017",
          title="Discovery Education",
          description="Comet, for educational digital apps and sites.",
          cta="View the Library",
          href="https://medium.com/eightshapes-llc/team-models-for-scaling-a-design-system-2cf9d03be6a0"
      ) }}
      
      {{ esds.card(
          class="esds-card--focus",
          container=card_background,
          thumbnail_image="/images/card/team-models-for-scaling-design-systems.jpg",
          date="2017",
          title="Discovery Education",
          description="Comet, for educational digital apps and sites.",
          cta="View the Library",
          href="https://medium.com/eightshapes-llc/team-models-for-scaling-a-design-system-2cf9d03be6a0"
      ) }}
    {% endmacro %}
    {% call esds.card_grid() %}
        {{ card_grid_sink_page_card_set() }}
    {% endcall %}

    {% call esds.card_grid(class="esds-background--white") %}
        {{ card_grid_sink_page_card_set() }}
    {% endcall %}

    {% call esds.card_grid(class="esds-background--light") %}
        {{ card_grid_sink_page_card_set(card_background="white") }}
    {% endcall %}

    {% call esds.card_grid(class="esds-background--dark") %}
        {{ card_grid_sink_page_card_set(card_background="white") }}
    {% endcall %}

    {% call esds.card_grid(class="esds-background--brand") %}
        {{ card_grid_sink_page_card_set(card_background="black") }}
    {% endcall %}

    {% call esds.card_grid(class="esds-background--black") %}
        {{ card_grid_sink_page_card_set(card_background="light") }}
    {% endcall %}
{% endblock body %}
